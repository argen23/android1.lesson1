<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/front_door"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:text="@string/text_main_vhod"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="22dp"
        />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/text_view_two"
        android:layout_width="256sp"
        android:layout_height="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:text="Добро пожаловать!"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="22dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выполните вход\n или зарегистрируйтесь"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_two"
        android:textColor="@color/white"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/edit_text_one"
        android:layout_width="320sp"
        android:layout_height="40sp"
        android:background="@drawable/round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_two"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:hint="Введите вашу почту"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/edit_text_two"
        android:layout_width="320sp"
        android:layout_height="40sp"
        android:background="@drawable/round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_one"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:hint="Введите пароль"
        android:inputType="numberPassword"
        android:textColorHint="@color/black"
        android:textAlignment="center"

        />
    <Button
        android:id="@+id/check_btn"
        android:onClick="go_btn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_two"
        android:layout_marginTop="10dp"
        android:background="@drawable/round4"
        android:text="Войти"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/nazhmy_suda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_btn"
        android:text="Забыли пароль?"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginStart="100dp"
        app:layout_constraintEnd_toStartOf="@id/text_view_zabyl_password"
        />

    <TextView
        android:onClick="click_text"
        android:id="@+id/text_view_zabyl_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_btn"
        android:text="нажмите сюда"
        android:textColor="@color/white"
        android:layout_marginStart="130dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>